{
  "openapi": "3.0.0",
  "info": {
    "title": "API El Geladon",
    "description": "API para CRUD de paletas mexicanas",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "URL de teste"
    }
  ],
  "paths": {
    "/paletas/": {
      "get": {
        "summary": "Lista todas as paletas",
        "description": "Rota responsável por listar todas as paletas",
        "tags": ["Paletas"],
        "responses": {
          "206": {
            "description": "Não existe nenhuma paleta cadastrada!"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Paleta"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Cadastrar uma paleta",
        "description": "Rota responsável por cadastrar uma paleta",
        "tags": ["Paletas"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Paleta"
              },
              "examples": {
                "Paleta": {
                  "value": {
                    "sabor": "Maracujá",
                    "descricao": "Paleta de Maracujá",
                    "foto": "./assets/images/maracuja.png",
                    "preco": 7
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Envie o todos os campos da paleta!"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Paleta"
                }
              }
            }
          }
        }
      }
    },
    "/paletas/{id}": {
      "get": {
        "summary": "Busca uma paleta pelo ID",
        "description": "Rota responsável por buscar uma paleta pelo ID",
        "tags": ["Paletas"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da paleta para a busca",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "ID Inválido!"
          },
          "206": {
            "description": "Paleta não encontrada com esse id!"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Paleta"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Editar uma paleta pelo ID",
        "description": "Rota responsável por editar uma paleta pelo ID",
        "tags": ["Paletas"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da paleta para a busca",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Paleta"
              },
              "examples": {
                "Paleta": {
                  "value": {
                    "sabor": "Maracujá Editado",
                    "descricao": "Paleta de Maracujá editado",
                    "foto": "./assets/images/maracuja-editado.png",
                    "preco": 5
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "ID Inválido ou Envie o todos os campos da paleta!"
          },
          "206": {
            "description": "Paleta não encontrada com esse id!"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Paleta"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Apagar uma paleta pelo ID",
        "description": "Rota responsável por apagar uma paleta pelo ID",
        "tags": ["Paletas"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da paleta para a deleção",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "ID Inválido!"
          },
          "206": {
            "description": "Paleta não encontrada com esse id!"
          },
          "200": {
            "description": "Paleta deletada!"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Paleta": {
        "type": "object",
        "properties": {
          "sabor": {
            "type": "string"
          },
          "descricao": {
            "type": "string"
          },
          "foto": {
            "type": "string"
          },
          "preco": {
            "type": "number"
          }
        }
      }
    }
  }
}
