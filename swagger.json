{
  "openapi": "3.0.0",
  "info": {
    "title": "API El Geladon",
    "description": "API para CRUD de paletas mexicanas",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "URL de teste"
    }
  ],
  "paths": {
    "/paletas/": {
      "get": {
        "summary": "Lista todas as paletas",
        "description": "Rota responsável por listar todas as paletas",
        "tags": ["Paletas"],
        "responses": {
          "206": {
            "description": "Não existe nenhuma paleta cadastrada!"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Paleta"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Cadastrar uma paleta",
        "description": "Rota responsável por cadastrar uma paleta",
        "tags": ["Paletas"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Paleta"
              },
              "examples": {
                "Paleta": {
                  "value": {
                    "sabor": "Maracujá",
                    "descricao": "Paleta de Maracujá",
                    "foto": "./assets/images/maracuja.png",
                    "preco": 7
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Envie o todos os campos da paleta!"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Paleta"
                }
              }
            }
          }
        }
      }
    },
    "/paletas/{id}": {
      "get": {},
      "put": {},
      "delete": {}
    }
  },
  "components": {
    "schemas": {
      "Paleta": {
        "type": "object",
        "properties": {
          "sabor": {
            "type": "string"
          },
          "descricao": {
            "type": "string"
          },
          "foto": {
            "type": "string"
          },
          "preco": {
            "type": "number"
          }
        }
      }
    }
  }
}
